    margin-top: 10px;
}

/* Conteneur principal du formulaire */
.search-form {
    display: flex;
    justify-content: flex-start; /* Aligne tous les éléments à gauche */
    align-items: center; /* Aligne verticalement tous les éléments */
    gap: 100px; /* Espacement uniforme entre les champs */
    max-width: 100%;
    margin-top: 50px;
}

/* Form-group pour les champs de formulaire */
.search-form .form-group {
    flex: 1; /* Les champs occupent l'espace disponible */
    margin: 0; /* Supprime les marges externes */
    display: flex;
    align-items: center; /* Assure l'alignement vertical des champs */
}

/* Champs de formulaire */
.search-form .form-control {
    width: 100%;
    padding: 8px;
    font-size: 16px;
    border-radius: 4px;
    border: 1px solid #ccc;
    height: 40px; /* Hauteur identique au bouton */
    box-sizing: border-box; /* Assure que padding et bordures ne cassent pas l'alignement */
}

/* Bouton de recherche */
.search-form .btn {
    padding: 8px 20px;
    font-size: 16px;
    background-color: #007bff;
    color: white;
    border-radius: 4px;
    border: none;
    cursor: pointer;
    height: 40px; /* Assure que le bouton a la même hauteur que les champs */
    display: flex;  
    align-items: center; /* Aligne verticalement le texte dans le bouton */
    justify-content: center; /* Centre horizontalement le texte */
}

/* Bouton hover */
.search-form .btn:hover {
    background-color: #0056b3;
}
