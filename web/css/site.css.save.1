/* --- Menu de navigation --- */
.navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    background-color: #444; /* Plus clair que #333 */
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Ombre ajoutée */
}

#notification-banner {
    position: fixed; /* Pour qu'il reste en haut et s'affiche au-dessus des autres éléments */
    top: 70px; /* Espace sous le menu fixe */
    left: 0; /* Placer le bandeau à gauche */
    width: 100%; /* Largeur du bandeau de gauche à droite */
    padding: 15px;
    text-align: center;
    font-weight: bold;
    border-radius: 8px; /* Coins arrondis */
    background: rgba(0, 0, 0, 0.5); /* Fond semi-transparent */
    color: white; /* Texte en blanc */
    display: none; /* Masqué par défaut */
    z-index: 1000; /* Pour être au-dessus des autres éléments */
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* Ombre douce pour l'effet */
    transition: opacity 0.5s ease, transform 0.5s ease; /* Transition douce pour l'apparition et disparition */
}

/* Réglez les couleurs spécifiques de chaque type de notification */
#notification-banner.alert-success {
    background: rgba(76, 175, 80, 0.7); /* Vert clair avec transparence */
    border: 1px solid #4CAF50; /* Bordure verte */
}

#notification-banner.alert-warning {
    background: rgba(255, 193, 7, 0.7); /* Jaune clair avec transparence */
    border: 1px solid #FFC107; /* Bordure jaune */
}

#notification-banner.alert-error {
    background: rgba(244, 67, 54, 0.7); /* Rouge avec transparence */
    border: 1px solid #F44336; /* Bordure rouge */
}


